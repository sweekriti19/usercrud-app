<h3>{{viewTitle}}</h3>
<body>
<form action="/user/register" method="POST"  autocomplete="off">
 <div class="form-group">
     <input type="hidden" name="_id" value="{{user._id}}">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" placeholder="Enter name" id="name" required>
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" name="email"  placeholder="Enter email" id="email" required>
  </div>
   <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password"  placeholder="Enter password" id="password" required>
  </div>
 
  <button type="submit" class="btn btn-primary">Register</button>
  <a href="/user/login" class="btn btn-dark">Login</a>
</form>

</body>